{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["@types/node", "vitest/globals"]
  },
  "references": [],
  "include": [
    "playground",
    "scripts",
    "tests",
    "*",

    "*/*/src/**/*.test.*",
    "*/*/src/**/*.bench.*",
    "*/*/src/**/*.test-d.ts",
